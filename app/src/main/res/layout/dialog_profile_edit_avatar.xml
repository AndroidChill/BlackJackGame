<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <TextView
            android:id="@+id/textView2"
            style="@style/HeadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            android:text="Выберите подходящее изображение"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout1"
                android:layout_width="200dp"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:background="@color/dark_back"
                android:layout_margin="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar1"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/avatar1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/money"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/money"
                    app:layout_constraintBottom_toBottomOf="@+id/avatar1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/avatar1" />

                <TextView
                    android:id="@+id/coins1"
                    style="@style/BaseTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="300"
                    app:layout_constraintBottom_toBottomOf="@+id/money"
                    app:layout_constraintEnd_toStartOf="@+id/money"
                    app:layout_constraintTop_toTopOf="@+id/money" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@color/dark_back"
                android:padding="8dp"
                android:layout_margin="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/avatar1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/money2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/money"
                    app:layout_constraintBottom_toBottomOf="@+id/avatar2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/avatar2" />

                <TextView
                    android:id="@+id/coins2"
                    style="@style/BaseTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="300"
                    app:layout_constraintBottom_toBottomOf="@+id/money2"
                    app:layout_constraintEnd_toStartOf="@+id/money2"
                    app:layout_constraintTop_toTopOf="@+id/money2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout3"
                android:layout_width="200dp"
                android:padding="8dp"
                android:background="@color/dark_back"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/avatar1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/money3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/money"
                    app:layout_constraintBottom_toBottomOf="@+id/avatar3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/avatar3" />

                <TextView
                    android:id="@+id/coins"
                    style="@style/BaseTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="300"
                    app:layout_constraintBottom_toBottomOf="@+id/money3"
                    app:layout_constraintEnd_toStartOf="@+id/money3"
                    app:layout_constraintTop_toTopOf="@+id/money3" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/coast"
            style="@style/HeadTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:id="@+id/coins_itog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="500"
            style="@style/HeadTextView"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/money4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/money"
            app:layout_constraintBottom_toBottomOf="@+id/coins_itog"
            app:layout_constraintStart_toEndOf="@+id/coins_itog"
            app:layout_constraintTop_toTopOf="@+id/coins_itog" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/agree"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>